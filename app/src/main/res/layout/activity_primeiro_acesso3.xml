<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Primeiro_Acesso3">

    <TextView
        android:id="@+id/NovoCpfView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:scaleX="2.6"
        android:scaleY="2.6"
        android:text="CPF:XXX.XXX.XXX-XX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NovoNomeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:scaleX="3"
        android:scaleY="3"
        android:text="Nome: João da Silva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NovoCpfView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_marginTop="116dp"
        android:scaleX="3"
        android:scaleY="3"
        android:text="Esses dados estão corretos?"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NovoNomeView" />

    <Button
        android:id="@+id/botao_sim"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#67CB57"
        android:text="Sim"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/botao_nao"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FF1500"
        android:text="Não"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botao_sim" />
</androidx.constraintlayout.widget.ConstraintLayout>